@model OIGAME_CONSULTORES_Test.Models.CustomerType

@{
    ViewBag.Title = "Create";
}

<style type="text/css">
    label:after {
        content: ": "
    }

    .panel-transparent {
        background: none;
    }

        .panel-transparent .panel-heading {
            background: rgba(122, 130, 136, 0.2) !important;
        }

        .panel-transparent .panel-body {
            background: rgba(46, 51, 56, 0.2) !important;
        }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4"><center><h2 style="color:#005282;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">@Resources.Customers.ADDCustomerType</h2></center></div>
            <div class="col-lg-4"></div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="panel-group">
            <div class="panel panel-primary panel-transparent">
                <div class="panel-body alert-info">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, @Resources.Customers.CustomerType, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:#16425F" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@Resources.Global.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
